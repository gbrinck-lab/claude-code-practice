# Configuración de Flask
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=tu-clave-secreta-super-segura-aqui

# Configuración de JWT
JWT_SECRET_KEY=tu-jwt-secret-key-super-segura-aqui

# Configuración de Base de Datos
DATABASE_URL=sqlite:///app.db
# Para PostgreSQL usar: postgresql://usuario:password@localhost/nombre_db
# Para MySQL usar: mysql://usuario:password@localhost/nombre_db

# Configuración de CORS (separar múltiples orígenes con comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Puerto de la aplicación
PORT=5000
